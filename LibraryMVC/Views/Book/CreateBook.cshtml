@model PostBook
@{
    ViewData["Title"] = "Add New Book";
}

<div class="row d-flex justify-content-center mt-5">
    <div class="col-5">    
        <h1 class="pb-3 fw-light border-bottom border-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
            </svg>
            <span class="mx-2">@ViewData["Title"]</span>
            
        </h1>
        <form class="form mt-3" method="POST" action="@Url.Action("CreateBook", "Book")">
            <div class="form-group">
                <label>Title</label>
                <input name="title" type="text" class="form-control" placeholder="Enter title" required/>
            </div>
             <div class="form-group">
                <label>Publish Year</label>
                <input name="year" type="number" class="form-control" placeholder="Enter publish year" required/>
            </div>
            <div class="form-group">
                <label>Book Author</label>
                <input name="author" type="text" class="form-control" placeholder="Enter book author" required/>
            </div>
            <div class="form-group">
                <label>Publisher</label>
                <input name="publisher" type="text" class="form-control" placeholder="Enter publisher" required />
            </div>
             <div class="form-group">
                <label>Stock</label>
                <input name="stock" type="number" class="form-control" placeholder="Enter stock" required/>
            </div>
            <small class="cst-highlight-secondary">@ViewData["stockInvalid"]</small>
            <button type="submit" class="btn cst-button-submit" >Submit</button>
        </form>
    </div>
</div>