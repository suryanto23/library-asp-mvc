    </svg>
    <span class="mx-2">Add</span>
</a>

@{
    if(Model.Count() != 0)
    {        
        <table class="table table-hover mt-5 cst-table-xl" >
             <thead>
                <tr class="cst-row">  
                  <th>Titlea</th>
                  <th>Author</th>
                  <th>Publisher</th>
                  <th>Year</th>
                  <th>Stock</th>
                  <th>Settings</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                    @{
                        foreach(BookModel item in Model)
                        {
                            <tr class="text-capitalize">
                              <td>@item.title</td>
                              <td>@item.author</td>
                              <td>@item.publisher</td>
                              <td>@item.year.ToString()</td>
                              <td>@item.stock.ToString()</td>
                              <td class="">
                                    <a href="@Url.ActionLink("BookDetails", "Book", new{ id = item.id})" class="cst-button-primary d-inline  p-2 mx-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                          <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
                                          <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                                        </svg>
                                    </a>
                                    <a href="@Url.ActionLink("EditBook", "Book", new{ id = item.id})" class="cst-button-primary d-inline p-2 mx-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                                          <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
                                        </svg>
                                    </a>
                                    <a class="cst-button-secondary d-inline p-2 mx-1" data-bs-toggle="modal" data-bs-target="#cst-modal-@(item.id)">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                          <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                                        </svg>
                                    </a>
                                    <div class="modal fade" id="cst-modal-@(item.id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                      <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                          <div class="modal-header">
                                            <h5 class="modal-title cst-highlight-secondary" id="exampleModalLongTitle">Are you sure?</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">                                             
                                            </button>
                                          </div>
                                          <div class="modal-body py-4 text-lowercase text-start">
                                            This action will permanently delete <span class="fw-bold text-capitalize">@item.title</span> from database and transaction record. 
                                          </div>
                                          <div class="modal-footer">
                                            <button type="button" class="btn cst-button-primary" data-bs-dismiss="modal">Cancel</button>
                                            <a href="@Url.ActionLink("DeleteBook", "Book", new{ id = item.id})" class="btn cst-button-secondary">Confirm Delete</a>
                                          </div>
                                        </div>
                                      </div>
                                    </div>                                   
                               </td>
                               <td>
                                @{if(@item.stock > 0){
                                    <a href="@Url.ActionLink("TransactionForm", "Book", new{ id = item.id})" class="btn cst-button-third">
                                        Rent this book
                                    </a>                                                                        
                                }else {
                                    <h6 class="cst-highlight-secondary fw-bold">Out of stock</h6>
                                }}
                               </td>
                            </tr>
                        }
                    }        
              </tbody>
        </table>
    } else
    {
        <div class="row d-flex justify-content-center mt-5 py-5">
            <div class="col-6 my-5 py-5 text-center">
                <h1 class="fw-light">You Dont Have Any <span class="cst-highlight-primary">Books</span> to Rent</h1>
                <p>You may add new books with a button above</p>
            </div>
        </div>
    }
}